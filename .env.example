OANDA_ACCOUNT_ID=your_actual_account_id_here
OANDA_API_URL=https://api-fxtrade.oanda.com/v3
OANDA_ENVIRONMENT=practice

# Server Configuration 
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
