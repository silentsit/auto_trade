# ----------------------------------------
# Render Environment Variables Example
# ----------------------------------------
# This file provides a template for environment variables
# on Render. These should be set in the Render Dashboard
# for the web service.
# ----------------------------------------

# Render environment configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# API Configuration
ENABLE_DOCS=true
ALLOW_CORS=true
CORS_ORIGINS=*

# FX API Settings
OANDA_API_URL=https://api-fxtrade.oanda.com/v3
OANDA_ENVIRONMENT=practice
TRADE_24_7=true

# Risk Management Settings
MAX_RETRIES=3
MAX_DAILY_LOSS=0.20
MAX_RISK_PERCENTAGE=2.0
ENABLE_ADVANCED_LOSS_MANAGEMENT=true
ENABLE_MULTI_STAGE_TP=true
ENABLE_MARKET_STRUCTURE_ANALYSIS=true

# Enable Development Modules
ENABLE_BACKTEST_ENGINE=true
ENABLE_BACKTEST_VISUALIZATION=true

# Visualization Settings
DASHBOARD_PORT=8050

# Server Configuration 
# PORT is automatically provided by Render
# HOST=0.0.0.0 is default in Render
LOG_LEVEL=INFO
ENVIRONMENT=production

# Risk Management
MAX_DAILY_LOSS=0.20
MAX_RISK_PERCENTAGE=2.0
MAX_PORTFOLIO_HEAT=15.0
DEFAULT_RISK_PERCENTAGE=1.0

# Trading Configuration
TRADE_24_7=true
MAX_RETRIES=3
BASE_DELAY=1.0
SPREAD_THRESHOLD_FOREX=0.001
SPREAD_THRESHOLD_CRYPTO=0.008

# Timeouts
CONNECT_TIMEOUT=10
READ_TIMEOUT=30
TOTAL_TIMEOUT=45

# Advanced Features
ENABLE_ADVANCED_LOSS_MANAGEMENT=true
ENABLE_MULTI_STAGE_TP=true
ENABLE_MARKET_STRUCTURE_ANALYSIS=true
ENABLE_CORRELATION_ANALYSIS=true

# Security - SHOULD BE SET AS SECRETS IN RENDER DASHBOARD
ALLOWED_ORIGINS=*
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Performance Monitoring
ENABLE_PROMETHEUS=false

# ----------------------------------------
# Important Notes for Render Deployment:
# ----------------------------------------
# 1. Sensitive values should be set in the Render Dashboard as secrets
# 2. Render automatically provides PORT environment variable 
# 3. Use render.yaml to specify env vars in your repository
# 4. For the app to use environment variables on Render, ensure 
#    enhanced_trading.py loads env vars correctly 